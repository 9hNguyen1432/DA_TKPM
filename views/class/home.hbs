<div class="d-flex justify-content-evenly" style="margin-top: 140px;">
    <div class="dropdown mx-5">
        <button type="button" class="btn dropdown-toggle py-5 fw-bold" data-bs-toggle="dropdown" aria-expanded="false"
            style="background-color: #F4F4F4 ; font-size: 20px; border-radius: 20px; border-color: #D9D9D9; width: 200px;">
            Lớp 10
        </button>
        <div class="dropdown-menu" id="semestermenu-dropdown"
            style="width: 200px; border-radius: 10px; margin-top: 10px;">
            {{#each className.class10}}
            <a class="btn dropdown-item" href="/class/{{this}}?year={{@root.CurYear}}&semester={{@root.CurSem}}" style="font-size: 18px; text-align: center;">
                {{this}}</a>
            {{/each}}
        </div>
    </div>
    <div class="dropdown mx-5">
        <button type="button" class="btn dropdown-toggle p-5 fw-bold" data-bs-toggle="dropdown" aria-expanded="false"
            style="background-color: #F4F4F4 ; font-size: 20px; border-radius: 20px; border-color: #D9D9D9; width: 200px;">
            Lớp 11
        </button>
        <div class="dropdown-menu" id="semestermenu-dropdown"
            style="width: 200px; border-radius: 10px; margin-top: 10px;">
            {{#each className.class11}}
            <a class="btn dropdown-item" href="/class/{{this}}?year={{@root.CurYear}}&semester={{@root.CurSem}}" style="font-size: 18px; text-align: center;">
                {{this}}</a>
            {{/each}}
        </div>
    </div>
    <div class="dropdown mx-5">
        <button type="button" class="btn dropdown-toggle p-5 fw-bold" data-bs-toggle="dropdown" aria-expanded="false"
