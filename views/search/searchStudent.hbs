<div class="my-3 mx-5">
    <h5 class="card py-2 shadow-sm" style="width: 400px; text-align: center; margin: 15px auto; border-radius: 10px;">
        TRA CỨU HỌC SINH
    </h5>
    <form method="post" id="form-search">
        {{!-- Search bar --}}
        <div class="d-flex justify-content-between" style="margin: 0 150px;">
            <div class="d-flex">
                <div>Thông tin tìm kiếm:</div>
                <div class="d-flex mx-2">
                    <div>
                        <input type="radio" id="mssv" name="type_search" value="id" checked>
                        <label for="mssv">MSSV</label><br>
                    </div>

                    <div class="mx-4">
                        <input type="radio" id="name" name="type_search" value="name">
                        <label for="name">Họ và tên</label><br>
                    </div>
                </div>
            </div>

            <div class="search-input">
                <div class="input-group rounded">
                    <input type="search" class="form-control rounded" placeholder="Nhập thông tin" aria-label="Search"
                        aria-describedby="search-addon" name="search_input" />
                    <button class="input-group-text border-0" id="search-addon" form="form-search">
                        <i class="fas fa-search"></i>
                        </span>
                </div>
            </div>
        </div>
    </form>


    {{#if students}}
    {{!-- Result --}}
    <div class="card mt-3" style="background-color: #D9D9D9; height: 510px; border-radius: 10px;">
        <div class="table-responsive px-3 py-2 m-1"
            style="background-color: white; border-radius: 10px; height: 500px;">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Họ và tên</th>
                        <th scope="col">Lớp</th>
                        <th scope="col">TB HK1</th>
                        <th scope="col">TB HK2</th>
                    </tr>
                </thead>
                <tbody data-bs-spy="scroll" data-bs-smooth-scroll="true">
                    {{#each students}}
                    <tr>
                        <th scope="row">1</th>
                        <td>Mark</td>
                        <td>Otto</td>
                        <td>@mdo</td>
                        <td>@mdo</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{/if}}
</div>